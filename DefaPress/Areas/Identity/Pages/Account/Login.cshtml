@page
@model LoginModel

@{
    ViewData["Title"] = "ورود به سیستم";
}

<form id="account" method="post">
    <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>

    <div class="form-group">
        <label class="form-label" asp-for="Input.PhoneNumber">شماره تلفن</label>
        <div class="input-wrapper">
            <i class="fas fa-mobile-alt input-icon"></i>
            <input asp-for="Input.PhoneNumber" class="form-input with-icon"
                   autocomplete="username" aria-required="true"
                   placeholder="09xxxxxxxxx" />
        </div>
        <span asp-validation-for="Input.PhoneNumber" class="field-error"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Input.Password">رمز عبور</label>
        <div class="input-wrapper">
            <i class="fas fa-lock input-icon"></i>
            <input asp-for="Input.Password" class="form-input with-icon"
                   autocomplete="current-password" aria-required="true"
                   placeholder="رمز عبور خود را وارد کنید" />
        </div>
        <span asp-validation-for="Input.Password" class="field-error"></span>
    </div>

    <div class="checkbox-group">
        <div class="custom-checkbox" id="rememberCheckbox"></div>
        <label class="checkbox-label" asp-for="Input.RememberMe">
            مرا به خاطر بسپار
        </label>
        <input type="checkbox" asp-for="Input.RememberMe" class="hidden-checkbox" style="display: none;" />
    </div>

    <button type="submit" class="auth-btn btn-glow">
        <i class="fas fa-sign-in-alt"></i>
        ورود به حساب کاربری
    </button>

    <div class="auth-footer">
        <a class="auth-link" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
            <i class="fas fa-user-plus"></i>
            حساب کاربری ندارید؟ ثبت‌نام کنید
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}