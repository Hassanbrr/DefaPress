@page
@model RegisterModel

@{
    ViewData["Title"] = "ثبت‌نام";
}

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="error-message" role="alert"></div>

    <div class="form-group">
        <label class="form-label" asp-for="Input.FullName">نام کامل</label>
        <div class="input-wrapper">
            <i class="fas fa-user input-icon"></i>
            <input asp-for="Input.FullName" class="form-input with-icon"
                   aria-required="true" placeholder="نام و نام خانوادگی" />
        </div>
        <span asp-validation-for="Input.FullName" class="field-error"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Input.PhoneNumber">شماره تلفن</label>
        <div class="input-wrapper">
            <i class="fas fa-mobile-alt input-icon"></i>
            <input asp-for="Input.PhoneNumber" class="form-input with-icon"
                   aria-required="true" placeholder="09xxxxxxxxx" />
        </div>
        <span asp-validation-for="Input.PhoneNumber" class="field-error"></span>
    </div>
    <!-- Role Selection -->
    <div class="form-group">
	    <div class="input-group">
		    <span class="input-group-icon">
			    <i class="fas fa-user-tag"></i>
		    </span>
		    <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-control">
			    <option value="">نقش کاربری را انتخاب کنید</option>
		    </select>
	    </div>
	    <span asp-validation-for="Input.Role" class="validation-message"></span>
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Input.Password">رمز عبور</label>
        <div class="input-wrapper">
            <i class="fas fa-lock input-icon"></i>
            <input asp-for="Input.Password" class="form-input with-icon"
                   autocomplete="new-password" aria-required="true"
                   placeholder="حداقل ۶ کاراکتر" id="passwordInput" />
        </div>
        <div class="password-strength">
            <div class="strength-bar" id="strengthBar"></div>
        </div>
        <div class="strength-text" id="strengthText"></div>
        <span asp-validation-for="Input.Password" class="field-error"></span>
    </div>

    <div class="form-group">
        <label class="form-label" asp-for="Input.ConfirmPassword">تکرار رمز عبور</label>
        <div class="input-wrapper">
            <i class="fas fa-lock input-icon"></i>
            <input asp-for="Input.ConfirmPassword" class="form-input with-icon"
                   autocomplete="new-password" aria-required="true"
                   placeholder="تکرار رمز عبور" />
        </div>
        <span asp-validation-for="Input.ConfirmPassword" class="field-error"></span>
    </div>

    <button type="submit" class="auth-btn btn-glow">
        <i class="fas fa-user-plus"></i>
        ایجاد حساب کاربری
    </button>

    <div class="auth-footer">
        <a class="auth-link" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
            <i class="fas fa-sign-in-alt"></i>
            قبلاً حساب دارید؟ وارد شوید
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}