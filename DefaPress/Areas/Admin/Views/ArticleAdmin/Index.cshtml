@using Helps
@model IEnumerable<ArticleListDto>

@{
    ViewData["Title"] = "مدیریت مقالات";
}

@section Styles {
    <link rel="stylesheet" href="~/Admin/css/neon-core.css" />
    <link rel="stylesheet" href="~/Admin/css/neon-forms.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        /* استایل‌های خاص صفحه مقالات */
        .article-table-container {
            background: rgba(30, 30, 46, 0.8);
            border-radius: 20px;
            border: 1px solid rgba(147, 51, 234, 0.3);
            overflow: hidden;
            box-shadow: 0 8px 40px rgba(0, 0, 0, 0.4);
        }

        .table {
            margin: 0;
            color: #fff;
        }

            .table thead th {
                background: rgba(147, 51, 234, 0.2);
                border-bottom: 2px solid rgba(147, 51, 234, 0.5);
                font-weight: 700;
                padding: 15px 10px;
                text-align: center;
                vertical-align: middle;
            }

            .table tbody td {
                padding: 12px 10px;
                vertical-align: middle;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                text-align: center;
            }

            .table tbody tr:hover {
                background: rgba(147, 51, 234, 0.1);
            }

        .article-title {
            font-weight: 600;
            color: #fff;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .article-title:hover {
                color: #88ffff;
                text-decoration: none;
            }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 700;
            display: inline-block;
        }

        .status-published {
            background: linear-gradient(135deg, #22C55E, #16A34A);
            color: white;
            box-shadow: 0 0 10px rgba(34, 197, 94, 0.4);
        }

        .status-draft {
            background: linear-gradient(135deg, #6B7280, #4B5563);
            color: white;
            box-shadow: 0 0 10px rgba(107, 114, 128, 0.4);
        }

        .status-breaking {
            background: linear-gradient(135deg, #EF4444, #DC2626);
            color: white;
            box-shadow: 0 0 10px rgba(239, 68, 68, 0.4);
        }

        .status-featured {
            background: linear-gradient(135deg, #F59E0B, #EAB308);
            color: white;
            box-shadow: 0 0 10px rgba(245, 158, 11, 0.4);
        }

        .article-image {
            width: 60px;
            height: 40px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            justify-content: center;
            flex-wrap: nowrap;
        }

        .neon-action-btn {
            min-width: 40px;
            height: 40px;
            border: none;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .neon-action-btn::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
                transition: left 0.6s ease;
            }

            .neon-action-btn:hover::before {
                left: 100%;
            }

            .neon-action-btn.edit {
                background: linear-gradient(135deg, #22C55E, #16A34A);
                color: white;
                box-shadow: 0 0 15px rgba(34, 197, 94, 0.4);
            }

            .neon-action-btn.publish {
                background: linear-gradient(135deg, #3178E8, #9333EA);
                color: white;
                box-shadow: 0 0 15px rgba(49, 120, 232, 0.4);
            }

            .neon-action-btn.unpublish {
                background: linear-gradient(135deg, #6B7280, #4B5563);
                color: white;
                box-shadow: 0 0 15px rgba(107, 114, 128, 0.4);
            }

            .neon-action-btn.delete {
                background: linear-gradient(135deg, #EF4444, #DC2626);
                color: white;
                box-shadow: 0 0 15px rgba(239, 68, 68, 0.4);
            }

            .neon-action-btn:hover {
                transform: translateY(-3px) scale(1.1);
                box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
            }

        /* استایل‌های ریسپانسیو */
        @@media (max-width: 768px) {
            .table thead {
                display: none;
            }

            .table, .table tbody, .table tr, .table td {
                display: block;
                width: 100%;
            }

                .table tr {
                    margin-bottom: 15px;
                    border: 1px solid rgba(255, 255, 255, 0.1);
                    border-radius: 10px;
                    padding: 10px;
                }

                .table td {
                    text-align: left;
                    padding: 10px;
                    border: none;
                }

                    .table td::before {
                        content: attr(data-label);
                        font-weight: bold;
                        display: inline-block;
                        width: 120px;
                        color: #88ffff;
                    }

            .action-buttons {
                justify-content: flex-start;
            }
        }
    </style>
}

<div class="container-fluid py-4">
    <!-- هدر صفحه -->
    <div class="neon-header-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="neon-main-title">📝 مدیریت مقالات</h1>
                <p class="neon-subtitle">ایجاد، ویرایش و مدیریت محتوای وبلاگ</p>
            </div>
            <div class="col-md-4 text-left">
                <button class="neon-create-btn" id="mainCreateButton" data-toggle="modal" data-target="#createArticleModal">
                    <i class="fas fa-plus"></i>
                    مقاله جدید
                </button>
            </div>
        </div>
    </div>

    <!-- آمار سریع -->
    <div class="neon-stats-grid">
        <div class="neon-stat-card">
            <div class="neon-stat-icon">
                <i class="fas fa-file-alt"></i>
            </div>
            <div class="neon-stat-number persianumber" id="totalArticles">@Model.Count()</div>
            <div class="neon-stat-label">کل مقالات</div>
        </div>
        <div class="neon-stat-card">
            <div class="neon-stat-icon">
                <i class="fas fa-rocket"></i>
            </div>
            <div class="neon-stat-number persianumber" id="publishedArticles">@Model.Count(a => a.IsPublished)</div>
            <div class="neon-stat-label">منتشر شده</div>
        </div>
        <div class="neon-stat-card">
            <div class="neon-stat-icon">
                <i class="fas fa-edit"></i>
            </div>
            <div class="neon-stat-number persianumber" id="draftArticles">@Model.Count(a => !a.IsPublished)</div>
            <div class="neon-stat-label">پیش‌نویس</div>
        </div>
        <div class="neon-stat-card">
            <div class="neon-stat-icon">
                <i class="fas fa-bolt"></i>
            </div>
            <div class="neon-stat-number persianumber" id="breakingArticles">@Model.Count(a => a.IsBreakingNews)</div>
            <div class="neon-stat-label">خبر فوری</div>
        </div>
    </div>

    <!-- جدول مقالات -->
    <div class="neon-container">
        <div class="article-table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>تصویر</th>
                        <th>عنوان</th>
                        <th>دسته‌بندی</th>
                        <th>وضعیت</th>
                        <th>تاریخ انتشار</th>
                        <th>عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td data-label="تصویر">
                                @if (!string.IsNullOrEmpty(article.ImageUrl))
                                {
                                    <img src="~/Client/images/image2.jpg" class="article-image" alt="@article.Title" />
                                }
                                else
                                {
                                    <span class="text-muted">بدون تصویر</span>
                                }
                            </td>
                            <td data-label="عنوان">
                                <a href="#" class="article-title">@article.Title</a>
                              
                            </td>
                            <td data-label="دسته‌بندی">@article.CategoryName</td>
                            <td data-label="وضعیت">
                                @if (article.IsPublished)
                                {
                                    <span class="status-badge status-published">منتشر شده</span>
                                }
                                else
                                {
                                    <span class="status-badge status-draft">پیش‌نویس</span>
                                }
                                @if (article.IsBreakingNews)
                                {
                                    <span class="status-badge status-breaking mt-1">خبر فوری</span>
                                }
                                @if (article.IsFeatured)
                                {
	                                <span class="status-badge status-featured ml-2">ویژه</span>
                                }
                            </td>
                            <td data-label="تاریخ انتشار">
	                            @if (article.PublishedAt.HasValue)
	                            {

                                    <span>@article.PublishedAt.Value.ToPersianDateString()</span> 

                                }
	                            else
	                            {
		                            <span class="text-muted">تعیین نشده</span>
	                            }
                            </td>
                            <td data-label="عملیات">
                                <div class="action-buttons">
                                    <button class="neon-action-btn edit" data-toggle="modal" data-target="#editArticleModal" data-id="@article.ArticleId">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    @if (article.IsPublished)
                                    {
                                        <button class="neon-action-btn unpublish" data-id="@article.ArticleId">
                                            <i class="fas fa-eye-slash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button class="neon-action-btn publish" data-id="@article.ArticleId">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    }
                                    <button class="neon-action-btn delete" data-id="@article.ArticleId">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal ایجاد مقاله -->
<div class="modal fade" id="createArticleModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style="background: linear-gradient(135deg, #1E1E1E 0%, #2a2a2a 100%); border: 1px solid rgba(147, 51, 234, 0.3);">
            <div class="modal-header" style="border-bottom: 1px solid rgba(147, 51, 234, 0.2);">
                <h5 class="modal-title" style="color: #9333EA; font-weight: 700;">📝 ایجاد مقاله جدید</h5>
                <button type="button" class="close text-white" data-dismiss="modal" style="opacity: 0.8;">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="createArticleModalBody" style="padding: 0;">
                <!-- محتوای مودال توسط AJAX لود می‌شود -->
            </div>
        </div>
    </div>
</div>

<!-- Modal ویرایش مقاله -->
<div class="modal fade" id="editArticleModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" style="background: linear-gradient(135deg, #1E1E1E 0%, #2a2a2a 100%); border: 1px solid rgba(34, 197, 94, 0.3);">
            <div class="modal-header" style="border-bottom: 1px solid rgba(34, 197, 94, 0.2);">
                <h5 class="modal-title" style="color: #22C55E; font-weight: 700;">✏️ ویرایش مقاله</h5>
                <button type="button" class="close text-white" data-dismiss="modal" style="opacity: 0.8;">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body" id="editArticleModalBody" style="padding: 0;">
                <!-- محتوای مودال توسط AJAX لود می‌شود -->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // مدیریت رویدادهای صفحه
        $(document).ready(function () {
            // بارگذاری مودال ایجاد
            $('#mainCreateButton').click(function () {
                $('#createArticleModalBody').load('@Url.Action("Create", "ArticleAdmin")', function () {
                    $('#createArticleModal').modal('show');
                });
            });

            // بارگذاری مودال ویرایش
            $('.neon-action-btn.edit').click(function () {
                var articleId = $(this).data('id');
                $('#editArticleModalBody').load('@Url.Action("Edit", "ArticleAdmin")/' + articleId, function () {
                    $('#editArticleModal').modal('show');
                });
            });

            // انتشار مقاله
            $('.neon-action-btn.publish').click(function () {
                var articleId = $(this).data('id');
                publishArticle(articleId);
            });

            // عدم انتشار مقاله
            $('.neon-action-btn.unpublish').click(function () {
                var articleId = $(this).data('id');
                unpublishArticle(articleId);
            });

            // حذف مقاله
            $('.neon-action-btn.delete').click(function () {
                var articleId = $(this).data('id');
                deleteArticle(articleId);
            });
        });

        // تابع انتشار مقاله
        function publishArticle(id) {
            Swal.fire({
                title: 'آیا از انتشار این مقاله اطمینان دارید؟',
                text: "مقاله پس از انتشار در سایت قابل مشاهده خواهد بود",
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، منتشر کن',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#22C55E',
                cancelButtonColor: '#6B7280'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Publish", "ArticleAdmin")/' + id)
                        .done(function (result) {
                            if (result.success) {
                                Swal.fire({
                                    title: 'موفقیت آمیز!',
                                    text: result.message,
                                    icon: 'success',
                                    confirmButtonText: 'باشه',
                                    confirmButtonColor: '#22C55E'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'خطا!',
                                    text: result.message,
                                    icon: 'error',
                                    confirmButtonText: 'متوجه شدم'
                                });
                            }
                        })
                        .fail(function () {
                            Swal.fire({
                                title: 'خطای سرور!',
                                text: 'خطا در ارتباط با سرور',
                                icon: 'error',
                                confirmButtonText: 'متوجه شدم'
                            });
                        });
                }
            });
        }

        // تابع عدم انتشار مقاله
        function unpublishArticle(id) {
            Swal.fire({
                title: 'آیا از عدم انتشار این مقاله اطمینان دارید؟',
                text: "مقاله از حالت انتشار خارج خواهد شد",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'بله، عدم انتشار',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#F59E0B',
                cancelButtonColor: '#6B7280'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Unpublish", "ArticleAdmin")/' + id)
                        .done(function (result) {
                            if (result.success) {
                                Swal.fire({
                                    title: 'موفقیت آمیز!',
                                    text: result.message,
                                    icon: 'success',
                                    confirmButtonText: 'باشه',
                                    confirmButtonColor: '#22C55E'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'خطا!',
                                    text: result.message,
                                    icon: 'error',
                                    confirmButtonText: 'متوجه شدم'
                                });
                            }
                        })
                        .fail(function () {
                            Swal.fire({
                                title: 'خطای سرور!',
                                text: 'خطا در ارتباط با سرور',
                                icon: 'error',
                                confirmButtonText: 'متوجه شدم'
                            });
                        });
                }
            });
        }

        // تابع حذف مقاله
        function deleteArticle(id) {
            Swal.fire({
                title: 'آیا از حذف این مقاله اطمینان دارید؟',
                text: "این عمل غیرقابل بازگشت است!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'بله، حذف کن',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#EF4444',
                cancelButtonColor: '#6B7280',
                dangerMode: true
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Delete", "ArticleAdmin")/' + id)
                        .done(function (result) {
                            if (result.success) {
                                Swal.fire({
                                    title: 'حذف شد!',
                                    text: result.message,
                                    icon: 'success',
                                    confirmButtonText: 'باشه',
                                    confirmButtonColor: '#22C55E'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'خطا!',
                                    text: result.message,
                                    icon: 'error',
                                    confirmButtonText: 'متوجه شدم'
                                });
                            }
                        })
                        .fail(function () {
                            Swal.fire({
                                title: 'خطای سرور!',
                                text: 'خطا در ارتباط با سرور',
                                icon: 'error',
                                confirmButtonText: 'متوجه شدم'
                            });
                        });
                }
            });
        }
    </script>
}