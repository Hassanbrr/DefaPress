@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="~/Admin/Ckeditor/ckeditor.js"></script>

    <script>
        const protocol = window.location.protocol;
        const host = window.location.host;
        const baseUrl = `${protocol}//${host}`;

        // ذخیره instanceهای CKEditor
        window.ckeditorInstances = {};

        // فعال کردن DataTable
        $(document).ready(function () {
            $('#articlesTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/fa.json"
                },
                "responsive": true,
                "columnDefs": [
                    { "orderable": false, "targets": [0, 6] }
                ]
            });

            // بارگذاری مودال ایجاد
            $('#mainCreateButton').click(function () {
                $('#createArticleModalBody').load('@Url.Action("Create", "ArticleAdmin")', function () {
                    $('#createArticleModal').modal('show');
                    initializeFormComponents();
                    initializeCKEditor('create');
                });
            });

            // بارگذاری مودال ویرایش
            $(document).on('click', '.neon-action-btn.edit', function () {
                var articleId = $(this).data('id');
                $('#editArticleModalBody').load('@Url.Action("Edit", "ArticleAdmin")/' + articleId, function () {
                    $('#editArticleModal').modal('show');
                    initializeFormComponents();
                    initializeCKEditor('edit');
                });
            });

            // انتشار مقاله
            $(document).on('click', '.neon-action-btn.publish', function () {
                var articleId = $(this).data('id');
                publishArticle(articleId);
            });

            // عدم انتشار مقاله
            $(document).on('click', '.neon-action-btn.unpublish', function () {
                var articleId = $(this).data('id');
                unpublishArticle(articleId);
            });

            // حذف مقاله
            $(document).on('click', '.neon-action-btn.delete', function () {
                var articleId = $(this).data('id');
                deleteArticle(articleId);
            });

            // وقتی مودال بسته می‌شود، CKEditorها را destroy کنید
            $('#createArticleModal, #editArticleModal').on('hidden.bs.modal', function () {
                destroyAllCKEditors();
            });
        });

        // تابع برای راه‌اندازی کامپوننت‌های فرم
        function initializeFormComponents() {
            // راه‌اندازی Select2 برای تگ‌ها
            $('.tag-select').select2({
                placeholder: "انتخاب تگ‌ها",
                allowClear: true,
                tags: false,
                tokenSeparators: [',', ' '],
                language: "fa",
                ajax: {
                    url: '@Url.Action("GetTags", "ArticleAdmin")',
                    dataType: 'json',
                    delay: 250,
                    data: function (params) {
                        return {
                            search: params.term
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data
                        };
                    },
                    cache: true
                }
            });

            // مدیریت آپلود تصویر شاخص
            $('.image-upload-input').on('change', function() {
                const fileInput = this;
                const formData = new FormData();
                formData.append('imageFile', fileInput.files[0]);

                // نمایش loading
                $(this).siblings('.upload-progress').show();

                $.ajax({
                    url: '@Url.Action("UploadFeaturedImage", "ArticleAdmin")',
                    type: 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function(result) {
                        if (result.success) {
                            // پر کردن فیلد ImageUrl با آدرس تصویر آپلود شده
                            $('input[name="ImageUrl"]').val(result.imageUrl);

                            // نمایش پیش‌نمایش تصویر
                            const previewHtml = `
                                <div class="image-preview mt-2">
                                    <img src="${result.imageUrl}" class="img-thumbnail" style="max-height: 150px;">
                                    <small class="text-success d-block mt-1">
                                        تصویر با موفقیت آپلود شد (${(result.optimizedSize / 1024).toFixed(1)} KB)
                                    </small>
                                </div>
                            `;
                            $(fileInput).siblings('.image-preview').remove();
                            $(fileInput).after(previewHtml);
                        } else {
                            Swal.fire('خطا!', result.message, 'error');
                        }
                    },
                    error: function() {
                        Swal.fire('خطا!', 'خطا در آپلود تصویر', 'error');
                    },
                    complete: function() {
                        $(fileInput).siblings('.upload-progress').hide();
                    }
                });
            });
        }

        // کلاس آپلود ادپتر برای CKEditor
        class MyUploadAdapter {
            constructor(loader) {
                this.loader = loader;
            }

            upload() {
                return this.loader.file
                    .then(file => new Promise((resolve, reject) => {
                        this._initRequest();
                        this._initListeners(resolve, reject, file);
                        this._sendRequest(file);
                    }));
            }

            abort() {
                if (this.xhr) {
                    this.xhr.abort();
                }
            }

            _initRequest() {
                const xhr = this.xhr = new XMLHttpRequest();
                const uploadUrl = `${baseUrl}/Admin/ArticleAdmin/UploadImageAdmin/`;
                xhr.open('POST', uploadUrl, true);
                xhr.responseType = 'json';
            }

            _initListeners(resolve, reject, file) {
                const xhr = this.xhr;
                const loader = this.loader;
                const genericErrorText = `Couldn't upload file: ${file.name}.`;

                xhr.addEventListener('error', () => reject(genericErrorText));
                xhr.addEventListener('abort', () => reject());
                xhr.addEventListener('load', () => {
                    const response = xhr.response;
                    if (!response || response.error) {
                        return reject(response && response.error ? response.error.message : genericErrorText);
                    }
                    resolve({
                        default: response.url
                    });
                });

                if (xhr.upload) {
                    xhr.upload.addEventListener('progress', evt => {
                        if (evt.lengthComputable) {
                            loader.uploadTotal = evt.total;
                            loader.uploaded = evt.loaded;
                        }
                    });
                }
            }

            _sendRequest(file) {
                const data = new FormData();
                data.append('upload', file);
                this.xhr.send(data);
            }
        }

        function MyCustomUploadAdapterPlugin(editor) {
            editor.plugins.get('FileRepository').createUploadAdapter = (loader) => {
                return new MyUploadAdapter(loader);
            };
        }

        // تابع برای راه‌اندازی CKEditor
        function initializeCKEditor(mode) {
            const editorId = mode === 'create' ? 'CreateContent' : 'ContentEditor';
            const container = mode === 'create' ? document.getElementById('createArticleModalBody') : document.getElementById('editArticleModalBody');

            if (!container) {
                console.error('Container not found for mode:', mode);
                return;
            }

            const textarea = container.querySelector(`#${editorId}`);
            if (!textarea) {
                console.error('Textarea not found with id:', editorId);
                return;
            }

            // اگر ادیتور قبلی وجود دارد، آن را از بین ببریم
            if (window.ckeditorInstances[editorId]) {
                window.ckeditorInstances[editorId].destroy()
                    .then(() => {
                        console.log('Previous CKEditor instance destroyed');
                    })
                    .catch(error => {
                        console.error('Error destroying CKEditor:', error);
                    });
                delete window.ckeditorInstances[editorId];
            }

            // ایجاد ادیتور جدید
            ClassicEditor.create(textarea, {
                language: 'fa',
                extraPlugins: [MyCustomUploadAdapterPlugin],
            })
            .then(editor => {
                window.ckeditorInstances[editorId] = editor;
                console.log('CKEditor initialized successfully for:', editorId);
            })
            .catch(error => {
                console.error('خطا در راه‌اندازی CKEditor:', error);
            });
        }

        // تابع برای از بین بردن همه CKEditorها
        function destroyAllCKEditors() {
            Object.keys(window.ckeditorInstances).forEach(editorId => {
                if (window.ckeditorInstances[editorId]) {
                    window.ckeditorInstances[editorId].destroy()
                        .then(() => {
                            console.log('CKEditor destroyed:', editorId);
                        })
                        .catch(error => {
                            console.error('Error destroying CKEditor:', error);
                        });
                }
            });
            window.ckeditorInstances = {};
        }

        // توابع مدیریت مقالات
        function publishArticle(id) {
            Swal.fire({
                title: 'آیا از انتشار این مقاله اطمینان دارید؟',
                text: "مقاله پس از انتشار در سایت قابل مشاهده خواهد بود",
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'بله، منتشر کن',
                cancelButtonText: 'لغو',
                confirmButtonColor: '#22C55E',
                cancelButtonColor: '#6B7280'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.post('@Url.Action("Publish", "ArticleAdmin")/' + id)
                        .done(function (result) {
                            if (result.success) {
                                Swal.fire({
                                    title: 'موفقیت آمیز!',
                                    text: result.message,
                                    icon: 'success',
                                    confirmButtonText: 'باشه',
                                    confirmButtonColor: '#22C55E'
                                }).then(() => {
                                    location.reload();
                                });
                            } else {
                                Swal.fire({
                                    title: 'خطا!',
                                    text: result.message,
                                    icon: 'error',
                                    confirmButtonText: 'متوجه شدم'
                                });
                            }
                        })
                        .fail(function () {
                            Swal.fire({
                                title: 'خطای سرور!',
                                text: 'خطا در ارتباط با سرور',
                                icon: 'error',
                                confirmButtonText: 'متوجه شدم'
                            });
                        });
                }
            });
        }

        function unpublishArticle(id) {
