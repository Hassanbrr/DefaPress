@model DefaPress.Application.DTOs.ArticleUpdateDto

<style>
    /* استایل‌های نئونی برای فرم - مشابه Create */
    .neon-form.advanced {
        background: rgba(0, 10, 20, 0.8);
        border-radius: 15px;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    .neon-header {
        position: relative;
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 10px;
        background: rgba(0, 20, 40, 0.6);
        border: 1px solid rgba(0, 247, 255, 0.2);
    }

    .neon-glow {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        pointer-events: none;
    }

    .neon-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #88ffff;
        margin-bottom: 10px;
    }

    .neon-subtitle {
        color: #88ffff;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .neon-card {
        background: rgba(0, 20, 40, 0.6);
        border: 1px solid rgba(0, 247, 255, 0.3);
        border-radius: 12px;
        padding: 0;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

        .neon-card:hover {
            border-color: rgba(0, 247, 255, 0.6);
            box-shadow: 0 6px 20px rgba(0, 247, 255, 0.2);
        }

        .neon-card.compact {
            margin-bottom: 15px;
        }

    .neon-card-header {
        background: rgba(0, 30, 60, 0.8);
        padding: 15px 20px;
        border-bottom: 1px solid rgba(0, 247, 255, 0.2);
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: bold;
        color: #00f7ff;
        border-radius: 12px 12px 0 0;
    }

    .neon-icon {
        color: #00f7ff;
        font-size: 1.1rem;
    }

    .neon-card-body {
        padding: 20px;
    }

    .neon-input-group {
        position: relative;
        margin-bottom: 20px;
    }

    .neon-label {
        display: block;
        color: #00f7ff;
        font-weight: bold;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .neon-input, .neon-textarea, .neon-select {
        width: 100%;
        background: rgba(0, 30, 60, 0.8);
        border: 1px solid rgba(0, 247, 255, 0.3);
        border-radius: 8px;
        padding: 12px 15px;
        color: #ffffff;
        font-size: 14px;
        transition: all 0.3s ease;
        font-family: inherit;
    }

        .neon-textarea.large {
            min-height: 200px;
            resize: vertical;
        }

        .neon-input:focus, .neon-textarea:focus, .neon-select:focus {
            outline: none;
            border-color: #00f7ff;
            box-shadow: 0 0 15px rgba(0, 247, 255, 0.3);
            background: rgba(0, 40, 80, 0.8);
        }

    .neon-focus-border {
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: #00f7ff;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .neon-input:focus ~ .neon-focus-border,
    .neon-textarea:focus ~ .neon-focus-border {
        width: 100%;
    }

    .neon-error {
        color: #ff4444;
        font-size: 0.8rem;
        margin-top: 5px;
        display: block;
    }

    /* استایل‌های Select2 */
    .select2-container--default .select2-selection--multiple {
        background: rgba(0, 30, 60, 0.8) !important;
        border: 1px solid rgba(0, 247, 255, 0.3) !important;
        border-radius: 8px !important;
        color: #ffffff !important;
    }

    /* استایل‌های toggle */
    .neon-toggle-group {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .neon-toggle {
        display: flex;
        align-items: center;
        gap: 12px;
        cursor: pointer;
        padding: 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .neon-toggle:hover {
            background: rgba(0, 247, 255, 0.1);
        }

    .neon-checkbox {
        display: none;
    }

    .neon-toggle-slider {
        width: 50px;
        height: 25px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        position: relative;
        transition: all 0.3s ease;
    }

        .neon-toggle-slider:before {
            content: '';
            position: absolute;
            width: 21px;
            height: 21px;
            border-radius: 50%;
            background: #ffffff;
            top: 2px;
            left: 2px;
            transition: all 0.3s ease;
        }

    .neon-checkbox:checked + .neon-toggle-slider {
        background: linear-gradient(45deg, #00ff88, #00f7ff);
    }

        .neon-checkbox:checked + .neon-toggle-slider:before {
            transform: translateX(25px);
        }

    .neon-toggle-text {
        color: #ffffff;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .neon-actions {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid rgba(0, 247, 255, 0.2);
    }

    .neon-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

        .neon-btn.secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            .neon-btn.secondary:hover {
                background: rgba(255, 255, 255, 0.2);
                border-color: rgba(255, 255, 255, 0.5);
                transform: translateY(-2px);
            }

        .neon-btn.success {
            background: linear-gradient(45deg, #00ff88, #00f7ff);
            color: #001a33;
            border: none;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
        }

            .neon-btn.success:hover {
                box-shadow: 0 0 30px rgba(0, 255, 136, 0.6);
                transform: translateY(-2px);
            }



    /* استایل‌های CKEditor */
    .ck.ck-editor {
        margin-top: 10px;
    }

    .ck.ck-editor__editable {
        background: rgba(0, 30, 60, 0.8) !important;
        color: #ffffff !important;
        min-height: 300px;
        border: 1px solid rgba(0, 247, 255, 0.3) !important;
        border-radius: 8px;
    }

    .ck.ck-toolbar {
        background: rgba(0, 40, 80, 0.8) !important;
        border: 1px solid rgba(0, 247, 255, 0.3) !important;
        border-bottom: none !important;
        border-radius: 8px 8px 0 0;
    }

    .ck.ck-button {
        color: #ffffff !important;
    }

        .ck.ck-button:not(.ck-disabled):hover {
            background: rgba(0, 247, 255, 0.2) !important;
        }

    .image-preview img {
        max-height: 150px;
        border-radius: 8px;
        border: 2px solid rgba(0, 247, 255, 0.3);
    }

    .upload-progress {
        display: none;
        color: #00f7ff;
        font-size: 0.8rem;
        margin-top: 5px;
    }

 
  
</style>

<form id="editArticleForm" asp-action="Edit" enctype="multipart/form-data" class="neon-form advanced">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ArticleId" />

    <div class="neon-header">
        <div class="neon-glow" style="background: radial-gradient(circle, rgba(0,247,255,0.3) 0%, transparent 70%);"></div>
        <h4 class="neon-title">✏️ ویرایش مقاله</h4>
        <p class="neon-subtitle">مقاله خود را به روزرسانی و بهبود دهید</p>
    </div>

    <div class="row">
        <div class="col-md-8">
            <!-- بخش اصلی محتوا -->
            <div class="neon-card">
                <div class="neon-card-header">
                    <i class="fas fa-edit neon-icon"></i>
                    <span>محتوا و جزئیات</span>
                </div>
                <div class="neon-card-body">
                    <div class="form-group neon-input-group">
                        <label class="neon-label">
                            <i class="fas fa-heading"></i>
                            عنوان مقاله
                        </label>
                        <input asp-for="Title" class="neon-input"
                               placeholder="یک عنوان جذاب و گیرا بنویسید..." />
                        <div class="neon-focus-border"></div>
                        <span asp-validation-for="Title" class="neon-error"></span>
                    </div>

                    <div class="form-group neon-input-group">
                        <label class="neon-label">
                            <i class="fas fa-align-left"></i>
                            خلاصه مقاله
                        </label>
                        <textarea asp-for="Summary" class="neon-textarea" rows="3"
                                  placeholder="خلاصه مختصر و جذابی از مقاله بنویسید...">@Model.Summary</textarea>
                        <div class="neon-focus-border"></div>
                    </div>

                    <div class="form-group neon-input-group">
                        <label class="neon-label">
                            <i class="fas fa-file-alt"></i>
                            محتوای اصلی
                        </label>
                        <textarea id="ContentEditor" asp-for="Content" class="neon-textarea large"
                                  placeholder="محتوای کامل و ارزشمند مقاله را اینجا بنویسید...">@Model.Content</textarea>
                        <div class="neon-focus-border"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <!-- سایدبار تنظیمات نئونی -->
            <div class="neon-sidebar">
                <!-- دسته‌بندی -->
                <div class="neon-card compact">
                    <div class="neon-card-header">
                        <i class="fas fa-folder neon-icon"></i>
                        <span>دسته‌بندی</span>
                    </div>
                    <div class="neon-card-body">
                        <div class="form-group neon-input-group">
                            <select asp-for="ArticleCategoryId" class="neon-select" required>
                                <option value="">-- انتخاب دسته‌بندی --</option>
                                @foreach (var category in ViewBag.Categories)
                                {
                                    <option value="@category.CategoryId"
                                            selected="@(category.CategoryId == Model.ArticleCategoryId)">
                                        📁 @category.Name
                                    </option>
                                }
                            </select>
                            <div class="neon-focus-border"></div>
                        </div>
                    </div>
                </div>

                <!-- تگ‌ها -->
                <div class="neon-card compact">
                    <div class="neon-card-header">
                        <i class="fas fa-tags neon-icon"></i>
                        <span>تگ‌ها</span>
                    </div>
                    <div class="neon-card-body">
                        <div class="form-group neon-input-group">
                            <select asp-for="TagIds" class="neon-select tag-select" multiple="multiple"
                                    data-placeholder="انتخاب تگ‌ها">
                                @if (ViewBag.Tags != null)
                                {
                                    foreach (var tag in ViewBag.Tags)
                                    {
                                        <option value="@tag.TagId"
                                                selected="@(Model.TagIds != null && Model.TagIds.Contains(tag.TagId))">
                                            @tag.Name
                                        </option>
                                    }
                                }
                            </select>
                            <div class="neon-focus-border"></div>
                        </div>
                    </div>
                </div>

                <!-- تنظیمات پیشرفته -->
                <div class="neon-card compact">
                    <div class="neon-card-header">
                        <i class="fas fa-cogs neon-icon"></i>
                        <span>تنظیمات پیشرفته</span>
                    </div>
                    <div class="neon-card-body">
                        <div class="form-group neon-input-group">
                            <label class="neon-label">
                                <i class="fas fa-link"></i>
                                منبع
                            </label>
                            <input asp-for="Source" class="neon-input"
                                   placeholder="منبع مقاله (اختیاری)" />
                            <div class="neon-focus-border"></div>
                        </div>

                        <div class="form-group neon-input-group">
                            <label class="neon-label">
                                <i class="fas fa-image"></i>
                                تصویر شاخص
                            </label>
                            <input type="file" class="neon-input image-upload-input"
                                   accept="image/*" />
                            <div class="upload-progress">
                                <i class="fas fa-spinner fa-spin"></i> در حال آپلود...
                            </div>

                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="image-preview mt-2">
                                    <img src="@Model.ImageUrl" class="img-thumbnail"
                                         alt="تصویر فعلی" style="max-height: 150px;">
                                    <small class="text-info d-block mt-1">
                                        تصویر فعلی مقاله
                                    </small>
                                </div>
                            }

                            <input type="hidden" asp-for="ImageUrl" />
                            <div class="neon-focus-border"></div>
                        </div>

                        <div class="form-group neon-input-group">
                            <label class="neon-label">
                                <i class="fas fa-link"></i>
                                اسلاگ
                            </label>
                            <input asp-for="Slug" class="neon-input"
                                   placeholder="اسلاگ مقاله" />
                            <div class="neon-focus-border"></div>
                        </div>
                    </div>
                </div>

                <!-- ویژگی‌های ویژه -->
                <div class="neon-card compact feature-card">
                    <div class="neon-card-header">
                        <i class="fas fa-star neon-icon"></i>
                        <span>ویژگی‌های ویژه</span>
                    </div>
                    <div class="neon-card-body">
                        <div class="neon-toggle-group">
                            <label class="neon-toggle">
                                <input asp-for="IsPublished" class="neon-checkbox" />
                                <span class="neon-toggle-slider"></span>
                                <span class="neon-toggle-text">
                                    <i class="fas fa-rocket"></i>
                                    منتشر شده
                                </span>
                            </label>

                            <label class="neon-toggle">
                                <input asp-for="IsBreakingNews" class="neon-checkbox" />
                                <span class="neon-toggle-slider"></span>
                                <span class="neon-toggle-text">
                                    <i class="fas fa-bolt"></i>
                                    خبر فوری
                                </span>
                            </label>

                            <label class="neon-toggle">
                                <input asp-for="IsFeatured" class="neon-checkbox" />
                                <span class="neon-toggle-slider"></span>
                                <span class="neon-toggle-text">
                                    <i class="fas fa-crown"></i>
                                    مقاله ویژه
                                </span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- دکمه‌های اقدام -->
    <div class="neon-actions">
        <button type="button" class="neon-btn secondary" data-dismiss="modal">
            <i class="fas fa-times"></i>
            انصراف
        </button>
        <button type="submit" class="neon-btn success">
            <i class="fas fa-save"></i>
            ذخیره تغییرات
        </button>
    </div>
</form>

<script>
    // ارسال فرم ویرایش
    $('#editArticleForm').submit(function (e) {
        e.preventDefault();

        // مطمئن شویم محتوای CKEditor در textarea ذخیره شده است
        if (window.ckeditorInstances['ContentEditor']) {
            const contentData = window.ckeditorInstances['ContentEditor'].getData();
            $('#ContentEditor').val(contentData);
        }

        var formData = new FormData(this);

        // اضافه کردن انیمیشن loading
        $('.neon-btn.success').html('<i class="fas fa-spinner fa-spin"></i> در حال ذخیره...').prop('disabled', true);

        $.ajax({
            url: $(this).attr('action'),
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (result) {
                if (result.success) {
                    Swal.fire({
                        title: 'موفقیت آمیز!',
                        text: result.message,
                        icon: 'success',
                        confirmButtonText: 'باشه',
                        confirmButtonColor: '#22C55E'
                    }).then(() => {
                        $('#editArticleModal').modal('hide');
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'خطا!',
                        text: result.message,
                        icon: 'error',
                        confirmButtonText: 'متوجه شدم'
                    });
                    $('.neon-btn.success').html('<i class="fas fa-save"></i> ذخیره تغییرات').prop('disabled', false);
                }
            },
            error: function (xhr) {
                console.error('Error:', xhr);
                Swal.fire({
                    title: 'خطای سرور!',
                    text: 'خطا در ارتباط با سرور',
                    icon: 'error',
                    confirmButtonText: 'متوجه شدم'
                });
                $('.neon-btn.success').html('<i class="fas fa-save"></i> ذخیره تغییرات').prop('disabled', false);
            }
        });
    });

    // راه‌اندازی کامپوننت‌ها پس از بارگذاری مودال
    $(document).ready(function () {
        // تنظیم مقدار تاریخ انتشار اگر وجود دارد
        var publishedAt = '@(Model.PublishedAt?.ToString("yyyy-MM-ddTHH:mm"))';
        if (publishedAt) {
            $('#PublishedAt').val(publishedAt);
        }
    });
</script>