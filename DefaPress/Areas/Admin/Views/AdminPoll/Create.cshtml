@model DefaPress.Application.DTOs.CreatePollDto

<style>
    .neon-form.advanced {
        background: rgba(0, 10, 20, 0.8);
        border-radius: 15px;
        padding: 20px;
        position: relative;
        overflow: hidden;
    }

    .neon-header {
        position: relative;
        text-align: center;
        margin-bottom: 30px;
        padding: 20px;
        border-radius: 10px;
        background: rgba(0, 20, 40, 0.6);
        border: 1px solid rgba(0, 247, 255, 0.2);
    }

    .neon-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #88ffff;
        margin-bottom: 10px;
    }

    .neon-subtitle {
        color: #88ffff;
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .neon-card {
        background: rgba(0, 20, 40, 0.6);
        border: 1px solid rgba(0, 247, 255, 0.3);
        border-radius: 12px;
        padding: 0;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .neon-card-header {
        background: rgba(0, 30, 60, 0.8);
        padding: 15px 20px;
        border-bottom: 1px solid rgba(0, 247, 255, 0.2);
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: bold;
        color: #00f7ff;
        border-radius: 12px 12px 0 0;
    }

    .neon-icon {
        color: #00f7ff;
        font-size: 1.1rem;
    }

    .neon-card-body {
        padding: 20px;
    }

    .neon-input-group {
        position: relative;
        margin-bottom: 20px;
    }

    .neon-label {
        display: block;
        color: #00f7ff;
        font-weight: bold;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
    }

    .neon-input, .neon-textarea, .neon-select {
        width: 100%;
        background: rgba(0, 30, 60, 0.8);
        border: 1px solid rgba(0, 247, 255, 0.3);
        border-radius: 8px;
        padding: 12px 15px;
        color: #ffffff;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .neon-textarea {
        min-height: 100px;
        resize: vertical;
    }

        .neon-input:focus, .neon-textarea:focus, .neon-select:focus {
            outline: none;
            border-color: #00f7ff;
            box-shadow: 0 0 15px rgba(0, 247, 255, 0.3);
            background: rgba(0, 40, 80, 0.8);
        }

    .poll-option-item {
        margin-bottom: 10px;
    }

    .neon-actions {
        display: flex;
        justify-content: flex-end;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid rgba(0, 247, 255, 0.2);
    }

    .neon-btn {
        padding: 12px 25px;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .neon-btn.secondary {
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .neon-btn.success {
            background: linear-gradient(45deg, #00ff88, #00f7ff);
            color: #001a33;
            border: none;
            box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
        }

        .neon-btn:hover {
            transform: translateY(-2px);
        }

    .add-option-btn {
        background: linear-gradient(45deg, #3178E8, #9333EA);
        color: white;
        border: none;
        padding: 10px 15px;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .remove-option {
        background: linear-gradient(45deg, #EF4444, #DC2626);
        color: white;
        border: none;
        border-radius: 8px;
        width: 40px;
        cursor: pointer;
    }
</style>

<form id="createPollForm" class="neon-form advanced">
    @Html.AntiForgeryToken()

    <div class="neon-header">
        <h4 class="neon-title">📊 ایجاد نظرسنجی جدید</h4>
        <p class="neon-subtitle">نظرسنجی جدید خود را ایجاد و منتشر کنید</p>
    </div>

    <div class="neon-card">
        <div class="neon-card-header">
            <i class="fas fa-question-circle neon-icon"></i>
            <span>سوال نظرسنجی</span>
        </div>
        <div class="neon-card-body">
            <div class="neon-input-group">
                <label class="neon-label">
                    <i class="fas fa-heading"></i>
                    سوال نظرسنجی
                </label>
                <textarea id="Question" name="Question" class="neon-textarea"
                          placeholder="سوال نظرسنجی خود را اینجا بنویسید..." required></textarea>
            </div>
        </div>
    </div>

    <div class="neon-card">
        <div class="neon-card-header">
            <i class="fas fa-list-ol neon-icon"></i>
            <span>گزینه‌های نظرسنجی</span>
        </div>
        <div class="neon-card-body">
            <div id="pollOptionsContainer">
                <div class="poll-option-item input-group mb-2">
                    <input type="text" class="form-control neon-input" name="Options"
                           placeholder="متن گزینه ۱" required>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-danger remove-option" disabled>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <div class="poll-option-item input-group mb-2">
                    <input type="text" class="form-control neon-input" name="Options"
                           placeholder="متن گزینه ۲" required>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-danger remove-option" disabled>
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            </div>
            <button type="button" id="addOption" class="add-option-btn">
                <i class="fas fa-plus"></i> افزودن گزینه جدید
            </button>
        </div>
    </div>

    <div class="neon-card">
        <div class="neon-card-header">
            <i class="fas fa-cogs neon-icon"></i>
            <span>تنظیمات پیشرفته</span>
        </div>
        <div class="neon-card-body">
            <div class="neon-input-group">
                <label class="neon-label">
                    <i class="fas fa-clock"></i>
                    مدت اعتبار (روز)
                </label>
                <input type="number" id="DurationDays" name="DurationDays" class="neon-input"
                       placeholder="مثلاً ۷ برای یک هفته (اختیاری)" min="1" max="365">
                <small style="color: #94A3B8; font-size: 0.8rem; margin-top: 5px; display: block;">
                    در صورت خالی گذاشتن، نظرسنجی به صورت دائمی فعال خواهد بود
                </small>
            </div>
        </div>
    </div>

    <div class="neon-actions">
        <button type="button" class="neon-btn secondary" data-dismiss="modal">
            <i class="fas fa-times"></i>
            انصراف
        </button>
        <button type="submit" class="neon-btn success">
            <i class="fas fa-plus"></i>
            ایجاد نظرسنجی
        </button>
    </div>
</form>

<script>
    // ارسال فرم ایجاد نظرسنجی
    $('#createPollForm').submit(function (e) {
        e.preventDefault();

        const formData = {
            Question: $('#Question').val(),
            Options: $('input[name="Options"]').map(function() {
                return $(this).val();
            }).get(),
            DurationDays: $('#DurationDays').val() ? parseInt($('#DurationDays').val()) : null
        };

        // اعتبارسنجی
        if (!formData.Question.trim()) {
            Swal.fire('خطا!', 'لطفاً سوال نظرسنجی را وارد کنید', 'warning');
            return;
        }

        if (formData.Options.length < 2) {
            Swal.fire('خطا!', 'حداقل دو گزینه مورد نیاز است', 'warning');
            return;
        }

        // بررسی گزینه‌های تکراری
        const uniqueOptions = [...new Set(formData.Options)];
        if (uniqueOptions.length !== formData.Options.length) {
            Swal.fire('خطا!', 'گزینه‌های تکراری مجاز نیستند', 'warning');
            return;
        }

        // اضافه کردن انیمیشن loading
        $('.neon-btn.success').html('<i class="fas fa-spinner fa-spin"></i> در حال ایجاد...').prop('disabled', true);

        $.ajax({
            url: '@Url.Action("Create", "AdminPoll")',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(formData),
            success: function (result) {
                if (result.success) {
                    Swal.fire({
                        title: 'موفقیت آمیز!',
                        text: 'نظرسنجی با موفقیت ایجاد شد',
                        icon: 'success',
                        confirmButtonText: 'باشه',
                        confirmButtonColor: '#22C55E'
                    }).then(() => {
                        $('#createPollModal').modal('hide');
                        location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'خطا!',
                        text: result.message || 'خطا در ایجاد نظرسنجی',
                        icon: 'error',
                        confirmButtonText: 'متوجه شدم'
                    });
                    $('.neon-btn.success').html('<i class="fas fa-plus"></i> ایجاد نظرسنجی').prop('disabled', false);
                }
            },
            error: function (xhr) {
                console.error('Error:', xhr);
                Swal.fire({
                    title: 'خطای سرور!',
                    text: 'خطا در ارتباط با سرور',
                    icon: 'error',
                    confirmButtonText: 'متوجه شدم'
                });
                $('.neon-btn.success').html('<i class="fas fa-plus"></i> ایجاد نظرسنجی').prop('disabled', false);
            }
        });
    });

    // راه‌اندازی فرم
    $(document).ready(function() {
        let optionCount = 2;

        // افزودن گزینه جدید
        $(document).on('click', '#addOption', function () {
            optionCount++;
            const optionHtml = `
                <div class="poll-option-item input-group mb-2">
                    <input type="text" class="form-control neon-input" name="Options"
                           placeholder="متن گزینه ${optionCount}" required>
                    <div class="input-group-append">
                        <button type="button" class="btn btn-danger remove-option">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
            `;
            $('#pollOptionsContainer').append(optionHtml);
        });

        // حذف گزینه
        $(document).on('click', '.remove-option', function () {
            if ($('.poll-option-item').length > 2) {
                $(this).closest('.poll-option-item').remove();
                optionCount--;
            } else {
                Swal.fire('خطا!', 'حداقل دو گزینه مورد نیاز است', 'warning');
            }
        });
    });
</script>