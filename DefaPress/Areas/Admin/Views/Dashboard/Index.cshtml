@model DefaPress.Presentation.Web.Areas.Admin.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "داشبورد مدیریت";
}

@section Styles {
    <link rel="stylesheet" href="~/Admin/css/neon-core.css" />
    <link rel="stylesheet" href="~/Admin/css/neon-tables.css" />
    <link rel="stylesheet" href="~/Admin/css/neon-forms.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        .recent-activity {
            background: rgba(30, 30, 46, 0.8);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(49, 120, 232, 0.3);
            margin-bottom: 25px;
            transition: all 0.3s ease;
            height: 100%;
        }

            .recent-activity:hover {
                border-color: rgba(49, 120, 232, 0.5);
                transform: translateY(-2px);
            }

        .activity-item {
            display: flex;
            align-items: center;
            padding: 18px;
            margin-bottom: 15px;
            background: rgba(45, 45, 65, 0.5);
            border-radius: 15px;
            border-right: 4px solid #3178E8;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

            .activity-item:hover {
                background: rgba(49, 120, 232, 0.15);
                transform: translateX(8px);
            }

        .activity-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 15px;
            font-size: 1.3rem;
            background: linear-gradient(135deg, rgba(49, 120, 232, 0.2), rgba(147, 51, 234, 0.15));
            color: #3178E8;
            flex-shrink: 0;
        }

        .activity-content {
            flex: 1;
            min-width: 0;
        }

            .activity-content h6 {
                color: white;
                margin-bottom: 6px;
                font-weight: 600;
                font-size: 1rem;
            }

            .activity-content p {
                color: #94A3B8;
                margin: 0;
                font-size: 0.9rem;
                line-height: 1.5;
            }

        .activity-time {
            color: #6366F1;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .chart-container {
            background: rgba(30, 30, 46, 0.8);
            border-radius: 20px;
            padding: 30px;
            border: 1px solid rgba(49, 120, 232, 0.3);
            margin-bottom: 25px;
            transition: all 0.3s ease;
            height: 100%;
        }

            .chart-container:hover {
                border-color: rgba(49, 120, 232, 0.5);
            }

        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .quick-action-btn {
            background: rgba(45, 45, 65, 0.6);
            border: 1px solid rgba(49, 120, 232, 0.25);
            border-radius: 15px;
            padding: 25px 20px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            color: inherit;
            backdrop-filter: blur(10px);
        }

            .quick-action-btn:hover {
                background: rgba(49, 120, 232, 0.15);
                border-color: #3178E8;
                transform: translateY(-5px) scale(1.02);
                text-decoration: none;
                color: inherit;
                box-shadow: 0 10px 30px rgba(49, 120, 232, 0.3);
            }

            .quick-action-btn i {
                font-size: 2.5rem;
                margin-bottom: 15px;
                background: linear-gradient(135deg, #3178E8, #9333EA);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .quick-action-btn h6 {
                color: white;
                margin-bottom: 8px;
                font-weight: 700;
                font-size: 1.1rem;
            }

            .quick-action-btn p {
                color: #94A3B8;
                font-size: 0.9rem;
                margin: 0;
                line-height: 1.5;
            }

        .system-status {
            background: rgba(30, 30, 46, 0.8);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(49, 120, 232, 0.3);
            margin-bottom: 25px;
            height: 100%;
        }

        .status-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(49, 120, 232, 0.15);
            transition: all 0.3s ease;
        }

            .status-item:hover {
                background: rgba(49, 120, 232, 0.05);
                padding: 15px 10px;
                border-radius: 8px;
            }

            .status-item:last-child {
                border-bottom: none;
            }

        .status-info {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            flex-shrink: 0;
        }

        .status-online {
            background: #22C55E;
            box-shadow: 0 0 15px rgba(34, 197, 94, 0.6);
            animation: pulse 2s infinite;
        }

        .status-warning {
            background: #F59E0B;
            box-shadow: 0 0 15px rgba(245, 158, 11, 0.6);
        }

        .status-offline {
            background: #EF4444;
            box-shadow: 0 0 15px rgba(239, 68, 68, 0.6);
        }

        .status-label {
            color: white;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .status-value {
            font-weight: 700;
            font-size: 0.9rem;
        }

        .text-success {
            color: #22C55E !important;
        }

        .text-warning {
            color: #F59E0B !important;
        }

        .text-danger {
            color: #EF4444 !important;
        }

        /* انیمیشن پالس برای وضعیت آنلاین */
        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
                transform: scale(1);
            }

            50% {
                opacity: 0.7;
                transform: scale(1.1);
            }
        }

        /* بهبود ریسپانسیو برای موبایل */
        @@media (max-width: 768px) {
            .recent-activity,
            .chart-container,
            .system-status {
                padding: 20px;
                margin-bottom: 20px;
            }

            .activity-item {
                padding: 15px;
                margin-bottom: 12px;
            }

            .activity-icon {
                width: 45px;
                height: 45px;
                font-size: 1.2rem;
                margin-left: 12px;
            }

            .quick-actions {
                grid-template-columns: 1fr;
                gap: 15px;
                margin-top: 20px;
            }

            .quick-action-btn {
                padding: 20px 15px;
            }

                .quick-action-btn i {
                    font-size: 2.2rem;
                    margin-bottom: 12px;
                }
        }

        @@media (max-width: 576px) {
            .recent-activity,
            .chart-container,
            .system-status {
                padding: 15px;
                border-radius: 15px;
            }

            .activity-item {
                padding: 12px;
                flex-direction: column;
                text-align: center;
            }

            .activity-icon {
                margin-left: 0;
                margin-bottom: 10px;
            }

            .status-item {
                flex-direction: column;
                gap: 8px;
                text-align: center;
            }

            .status-info {
                justify-content: center;
            }
        }
    </style>
}


<div class="container-fluid py-4">
    <!-- هدر صفحه -->
    <div class="neon-header-section">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h1 class="neon-main-title">🚀 داشبورد مدیریت</h1>
                <p class="neon-subtitle">نمای کلی از عملکرد و آمار سیستم - مدیریت حرفه‌ای محتوا</p>
            </div>
            <div class="col-md-4 text-left">
                <div class="d-flex align-items-center justify-content-end">
                    <div class="text-muted text-center">
                        <i class="fas fa-calendar-alt ml-2"></i>
                        <span id="currentDate" class="persianumber">@DateTime.Now.ToString("yyyy/MM/dd")</span>
                        <div class="mt-1">
                            <small id="currentTime" class="persianumber">@DateTime.Now.ToString("HH:mm")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- آمار سریع -->
    <div class="neon-stats-grid">
        <div class="neon-stat-card" style="animation-delay: 0.1s">
            <div class="neon-stat-icon">
                <i class="fas fa-newspaper"></i>
            </div>
            <div class="neon-stat-number persianumber">@Model.TotalArticles</div>
            <div class="neon-stat-label">کل مقالات</div>
        </div>
        <div class="neon-stat-card" style="animation-delay: 0.2s">
            <div class="neon-stat-icon">
                <i class="fas fa-eye"></i>
            </div>
            <div class="neon-stat-number persianumber">@Model.PublishedArticles</div>
            <div class="neon-stat-label">مقالات منتشر شده</div>
        </div>
        <div class="neon-stat-card" style="animation-delay: 0.3s">
            <div class="neon-stat-icon">
                <i class="fas fa-folder"></i>
            </div>
            <div class="neon-stat-number persianumber">@Model.TotalCategories</div>
            <div class="neon-stat-label">دسته‌بندی‌ها</div>
        </div>
        <div class="neon-stat-card" style="animation-delay: 0.4s">
            <div class="neon-stat-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="neon-stat-number persianumber">@(Model.TotalArticles - Model.PublishedArticles)</div>
            <div class="neon-stat-label">پیش‌نویس‌ها</div>
        </div>
    </div>

    <div class="row">
        <!-- ستون اصلی -->
        <div class="col-lg-8">
          

            <!-- فعالیت‌های اخیر -->
            <div class="recent-activity">
                <h5 class="text-white mb-4">
                    <i class="fas fa-history ml-2"></i>
                    آخرین مقالات
                </h5>
                <div class="activity-list">
                    @foreach (var article in Model.RecentArticles)
                    {
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="activity-content">
                                <h6>@article.Title</h6>
                                <p>@article.CategoryName - توسط @article.AuthorName</p>
                            </div>
                            <div class="activity-time">
                                @article.CreatedAt.ToString("MM/dd")
                                @if (article.IsPublished)
                                {
                                    <span class="badge badge-success mr-1">منتشر شده</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning mr-1">پیش‌نویس</span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- ستون کناری -->
        <div class="col-lg-4">
            <!-- وضعیت سیستم -->
            
            <!-- اقدامات سریع -->
            <div class="quick-actions">
                <a href="@Url.Action("Index", "ArticleAdmin")" class="quick-action-btn">
                    <i class="fas fa-newspaper"></i>
                    <h6>مقالات</h6>
                    <p>مدیریت کامل مقالات وبسایت</p>
                </a>
                <a href="@Url.Action("Index", "ArticleCategoryAdmin")" class="quick-action-btn">
                    <i class="fas fa-folder"></i>
                    <h6>دسته‌بندی‌ها</h6>
                    <p>سازماندهی دسته‌بندی‌ها</p>
                </a>
                <a href="#" class="quick-action-btn">
                    <i class="fas fa-users"></i>
                    <h6>کاربران</h6>
                    <p>مدیریت کاربران سیستم</p>
                </a>
                <a href="#" class="quick-action-btn">
                    <i class="fas fa-cog"></i>
                    <h6>تنظیمات</h6>
                    <p>تنظیمات پیشرفته سیستم</p>
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // به روزرسانی تاریخ و زمان
        function updateDateTime() {
            const now = new Date();
            const dateOptions = {
                year: 'numeric',
                month: '2-digit',
                day: '2-digit',
                calendar: 'persian'
            };
            const timeOptions = {
                hour: '2-digit',
                minute: '2-digit',
                hour12: false
            };

            document.getElementById('currentDate').textContent = now.toLocaleDateString('fa-IR', dateOptions);
            document.getElementById('currentTime').textContent = now.toLocaleTimeString('fa-IR', timeOptions);
        }

        // به روزرسانی هر ثانیه
        setInterval(updateDateTime, 1000);
        updateDateTime();

        // نمودار مقالات با داده‌های واقعی
    </script>
}